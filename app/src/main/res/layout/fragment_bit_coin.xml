<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.company.sosison.cryptonews.fragment.BitCoin">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bit_con_view"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/bitcoin_icon"/>
            <TextView
                android:id="@+id/val_name_bit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bitcoin"
                android:layout_below="@+id/bit_con_view"
                android:textSize="17sp"
                android:layout_marginLeft="7dp"
                />
            <TextView
                android:id="@+id/bit_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push the button"
                android:layout_toEndOf="@+id/bit_con_view"
                android:layout_toRightOf="@+id/bit_con_view"
                android:textSize="25sp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                 />
            <TextView
                android:id="@+id/logo_curs"
                android:layout_width="20dp"
                android:text="$"
                android:layout_toEndOf="@id/bit_price_view"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/bit_price_view"
                android:layout_toRightOf="@id/bit_price_view" />
            <TextView
                android:id="@+id/bit_change_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bit_price_view"
                android:layout_alignBaseline="@id/val_name_bit"
                android:layout_marginLeft="79dp"
                android:text="+0"
                android:textSize="20sp"
                android:textColor="#2CB428"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/date_bit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/bit_change_view"
                android:layout_alignBaseline="@id/val_name_bit"
                android:text="9 Фев."
                android:layout_toRightOf="@+id/bit_change_view" />


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fb_bit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="15sp"
        android:src="@drawable/ic_add"/>


</FrameLayout>
